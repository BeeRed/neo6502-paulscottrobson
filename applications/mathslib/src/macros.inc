binop 	.macro
	lda 	IFR0+IM0
	\1 		IM0,x
	sta 	IFR0+IM0
	lda 	IFR0+IM1
	\1 		IM1,x
	sta 	IFR0+IM1
	lda 	IFR0+IM2
	\1 		IM2,x
	sta 	IFR0+IM2
	.endm

IM0 = 0
IM1 = 1
IM2 = 2
IExp = 3

IFXMask = $3F
IFSign = $40

