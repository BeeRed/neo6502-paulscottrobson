:static void Push(BYTE8 v) {
:	Write(0x100+s,v);
:	s = (s - 1) & 0xFF;	
:}

:static BYTE8 Pop(void) {
:	s = (s + 1) & 0xFF;
:	return Read(0x100+s);	
:}

